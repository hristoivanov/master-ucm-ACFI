(omod EJEMPLO is
  pr CONFIGURATION .
  pr RED .

  var O : Oid .
  var S : String .

  op ext : Oid String -> Object .
  eq ext(O, S) = < O : Extremo | IP : S, Estado : inactivo, centro : null > .

  op cent : Oid String -> Object .
  eq cent(O, S) = < O : Centro | IP : S, Estado : inactivo, tabla : nTabla > .

  ops procE procC : Oid String -> Object .
  eq procE(O, S) = < O : Proceso | datos : ext(n(O), S) > .
  eq procC(O, S) = < O : Proceso | datos : cent(n(O), S) > .

  op init : -> Configuration .
  eq init = 
            cent('c0, "ip0")
            ext('e1, "ip1")
            ext('e2, "ip2")
            ext('e3, "ip3") .

endom)

(frew init .)
